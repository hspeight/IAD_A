<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textStartDate"
        android:layout_marginTop="99dp"
        android:layout_below="@+id/textTitle"
        android:layout_alignRight="@+id/textBanner"
        android:layout_alignEnd="@+id/textBanner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Banner"
        android:id="@+id/textBanner"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textTitle"
        android:layout_below="@+id/textBanner"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/textStartDate"
        android:layout_marginTop="137dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textDays"
            android:layout_below="@+id/textTitle"
            android:layout_marginRight="10dp"
            android:minWidth="30dp"
            android:text="dd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textHour"
            android:minWidth="30dp"
            android:layout_alignTop="@+id/textDays"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"
            android:text="hh" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textMins"
            android:layout_alignTop="@+id/textHour"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"
            android:minWidth="30dp"
            android:text="mm" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textSecs"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:minWidth="30dp"
            android:text="ss" />

    </LinearLayout>

</RelativeLayout>