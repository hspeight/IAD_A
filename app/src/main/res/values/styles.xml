<resources>

    <!-- Activity themes -->
    <style name="Theme.Base" parent="android:Theme.Holo.Light" />
    <style name="Theme.Sample" parent="Theme.Base" />
    <!-- Widget styling -->
    <style name="Widget" />
    <style name="Widget.SampleContentContainer">
        <item name="android:padding">@dimen/margin_medium</item>
    </style>
    <style name="Widget.SampleMessage">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>
    <style name="Widget.SampleButton" parent="android:Widget.Holo.Light.Button">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="LVStyle1" parent="@android:style/Widget.ListView">

        <item name="android:background">#FFFF00</item>

    </style>

    <style name="archtext1">
        <item name="android:padding">4dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">#0000ff</item>
        <item name="android:background">#C0C0C0</item>
    </style>

</resources>
